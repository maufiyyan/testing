@font-face
    font-family MaisonNeue-Book
    src url('https://bilba.go-jek.com/v4/fonts/maison-neue/MaisonNeue-Book.woff2')

@font-face
    font-family MaisonNeueExtended-Bold
    src url('https://bilba.go-jek.com/v4/fonts/maison-neue/MaisonNeueExtended-Bold.woff2')

@font-face
    font-family MaisonNeue-Demi
    src url('https://bilba.go-jek.com/v4/fonts/maison-neue/MaisonNeueExtended-Bold.woff2')
    
body{
    font-family MaisonNeue-Book 
}

.img-wrapper-ratio{
    width 100%
    position relative
    &__1-1{
    padding-bottom 100%
    }
    &__4-3{
    padding-bottom 75%
    }
    &__16-9{
    padding-bottom 56.25%
    }
    &__5-3{
    padding-bottom 60%
    }
    &__3-4{
    padding-bottom 133.33333333%
    }
    &__2-3{
    padding-bottom 150%
    }
    .v-lazy-image{
      position absolute
      object-fit cover
      width 100%
      height 100%
    }
}
.c-header {
    font-size 1rem;
    position fixed
    left 0
    right 0
    top 0
    z-index 11
    max-width unset
    background-color #fff
    -webkit-transition all .3s
    -moz-transition all .3s
    transition all .3s
    &__logo {
        img{
            max-height 28px
        }
    }
    &__link {
        line-height 1.5
        list-style-type none
        margin 0
        padding 0
        overflow hidden
        svg{
            margin-left 5px
        }
    }
    &__link-icon-left {
        padding-right 4px
        margin-left 0 !important
    }
    &__link-icon-second {
        display inline-block
    }
    a {
        color #1c1d1d
        -webkit-transition color .5s ease-in-out
        -moz-transition color .5s ease-in-out
        transition color .5s ease-in-out
        text-decoration none
        margin 0 5px
    }
}
.c-footer {
    background-color #1c1d1d
    min-height 38vh
    color #fff
    padding 16px
}
.c-fitem {
    position relative
    padding 1rem
    font-size 1rem
    line-height 1.5rem
    letter-spacing normal
    &__title {
        font-family MaisonNeueExtended-Bold
        font-size 1rem
        font-weight 700
        margin-bottom 1rem
    }
    &__list {
        list-style none
        padding 0
        margin 0
        a {
            color #fff
            opacity .8
        }
    }
    &__list-item{
        display block
        margin 0
        margin-bottom .5rem
    }
    &--location {
        padding 0
        margin-bottom 0
        .c-fitem {
            &__title {
                font-family "MaisonNeueExtended-Bold"
                font-size 1rem
                font-weight 700
                &--desktop {
                    position relative;
                    border-radius 16px
                    -webkit-box-shadow 0 2px 6px 0 rgba(0,0,0,.2)
                    box-shadow 0 2px 6px 0 rgba(0,0,0,.2)
                    background-color #282929
                    padding 4px 16px
                    z-index 9
                }
            }
            &__selected{
                font-family MaisonNeue-Book
                font-weight 400
                opacity .8
                margin-right 1rem
                vertical-align middle
            }
            &__country-list {
                display: block;
                position: absolute;
                left: 0;
                bottom: -moz-calc(38px + 16px);
                bottom: calc(38px + 16px);
                overflow: hidden;
                z-index: 10;
                margin: 0 0 8px;
                padding: 0;
                list-style: none;
                width: 100%;
                border-radius: 16px;
                -webkit-box-shadow: 0 2px 6px 0 rgba(0,0,0,.2);
                box-shadow: 0 2px 6px 0 rgba(0,0,0,.2);
                background-color: #282929;
                opacity: 0;
                -webkit-transition: opacity 250ms cubic-bezier(.4,0,.2,1);
                -moz-transition: opacity 250ms cubic-bezier(.4,0,.2,1);
                transition: opacity 250ms cubic-bezier(.4,0,.2,1);
                pointer-events: none;
                -webkit-animation: cubic-bezier(.4,0,.2,1) .2s pop-countryselect-0 forwards;
                -moz-animation: cubic-bezier(.4,0,.2,1) .2s pop-countryselect-0 forwards;
                animation: cubic-bezier(.4,0,.2,1) .2s pop-countryselect-0 forwards;
            }
        }
    }
    &--copyright {
        padding-top .5rem
        padding-bottom 0
        border-top 1px solid #fff
    }
}
main{
    margin-top 56px
}

@media screen and (min-width: 769px){
    .c-header{
        &__menu {
            height 80px
        }
        /*&__link {
            display block
        }*/
        &__link-icon {
            padding-right 4px
        }
        &.active {
            -webkit-box-shadow 0 2px 6px 0 rgba(0,0,0,.2)
            box-shadow 0 2px 6px 0 rgba(0,0,0,.2)
        }
    }
    .o-cursor{
        &__pointer {
            cursor pointer
        }
    }
    .c-fitem{
        &__logo {
            pointer-events none
            height 48px
        }
        &__title {
            margin-bottom .5rem
        }
        &--location {
            .c-fitem{
                &__title {
                    &--desktop {
                        border-bottom 0
                        margin-bottom 20px
                    }
                }
            }
            &.active { 
                .c-fitem {
                    &__country-list {
                        pointer-events unset
                        opacity 1
                        -webkit-animation cubic-bezier(.4,0,.2,1) .25s pop-countryselect-1 forwards
                        -moz-animation cubic-bezier(.4,0,.2,1) .25s pop-countryselect-1 forwards
                        animation cubic-bezier(.4,0,.2,1) .25s pop-countryselect-1 forwards
                    }
                }
            }
        }
        &--copyright {
            margin-bottom 3.5rem
        }
    }
    .c-download {
        &__item {
            img{
                width 142.2px
                margin-bottom .5rem
            }
        }
    }
    main{
        margin-top 81px
    }
}
@media screen and (max-width: 768px){
    .hide-desktop {
        display none !important
    }
    .c-header{
        &__menu{
            height 56px
            padding 0 16px
        }
    }
}