.banner {
  img {
    width 100%
    position absolute
    height 480px
  }
  &__content {
    height 480px
    align-items center
    display flex
    color #fff
    h1{ 
      font-family MaisonNeueExtended-Bold
      line-height 1.2
      font-size 3rem
      margin-bottom 1.5rem
    }
    p {
      font-size 1.75rem
    }
    button {
      min-width 163px
      cursor pointer
      color #fff
      background rgba(0,0,0,.35)
      border-radius 24px
      max-width 100%
      min-height 40px
      font-size 1rem
      border unset
      padding 0 2rem
      font-family MaisonNeue-Demi
    }
  }
}
.c-information{
  img{
    width 100%
    border-radius 16px
  }
  &__title{
    color #1c1d1d
    font-family MaisonNeueExtended-Bold
    line-height 1.41
    &--medium{
      font-size 24px
    }
  }
  &__link{
    font-size 18px
    line-height 1.33
    color #00aa13
    text-decoration none
    font-family MaisonNeue-Demi
    width auto
  }
  &-2{
    font-size: 1rem;
    line-height: 1.5;
  }
}
.swiper_1{
  position relative
  img{
    width 100%
    height 220px
  }
  .swiper-pagination{
    width 100%
    margin-top 1rem
    &-bullet{
      margin-right 8px
      &-active{
        background-color: #00aa13;
        color: #00aa13;
      }
    }
  }
}
.c-card {
  display flex
  position relative
  flex-direction column
  min-width 0
  word-wrap break-word
  background-color #fff
  background-clip border-box
  border-radius 16px
  box-shadow: 0 2px 6px 0 rgba(0,0,0,.2)
  -webkit-transition all .3s
  -moz-transition all .3s
  transition all .3s
  height 100%
  img {

  }
  &__body {
      border-bottom-left-radius 16px
      border-bottom-right-radius 16px
      flex 1 1 auto
      padding-top .5rem
      background-color #fff
      font-size 16px
  }
}
@media screen and (min-width: 769px){
  section{
    margin-bottom 6.5rem
  }
  .banner{
    img{
      height 568px
    }
    &__content{
      height 568px
    }
  }
  .c-information{
    &__title {
      font-size 32px
      &--medium{
        font-size 37px
      }
    }
    &__text--right {
        padding-left 95px !important
    }
    &-2{
      font-size: 1.125rem;
      line-height: 1.33;
    }
  }
  .swiper_1{
    img{
      width 100%
      border-radius 32px
      height 568px
    }
  }
  .c-card {
    margin-left 5px
    margin-top 5px
    margin-bottom 5px
    &:hover {
      transition all .3s
      z-index 1
      box-shadow 0 6px 18px 0 rgba(0,0,0,.2)
      img {
        display inline-flex
      }
    }
    &__body {
        padding-top: 1rem;
    }
  }
}
@media screen and (max-width: 768px){
  .banner{
    &__content{
      align-items flex-end !important
      text-align center
      h1 {
        font-size 1.75rem
        margin-bottom 1rem
      }
      p{
        line-height 1.2
        font-size 1.25rem
      }
      button{
        min-width 85%
        max-width 100%
      }
    }
    
  }
  section{
    margin-bottom: 3.5rem
  }
  .container{
    &.px-0{
      padding 0 15px !important
    }
  }
  .swiper_1{
    img{
      border-radius 16px
      height 220px
    }
  }
}